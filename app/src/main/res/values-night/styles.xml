<resources>
    <!-- Base application theme. -->
    <style name="BarterTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="BarterTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BarterTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BarterTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BarterTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/BarterTextAppearance</item>
    </style>

    <style name="BarterTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>